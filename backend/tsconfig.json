{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": true,

    "module": "CommonJS",
    "incremental": true,

    "baseUrl": ".",

    "rootDir": "./src",
    "outDir": "./dist"
  },
  "exclude": ["node_modules", "dist"]
}
